{% if _ro.body %}
    <table class="table">
        <thead>
        <tr>
            <th>{{ _ro.text.id }}</th>
            <th>{{ _ro.text.title }}</th>
            <th>{{ _ro.text.created_at }}</th>
            <th> </th>
        </tr>
        </thead>
        <tbody>
        {% for todo in _ro.body %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.title }}</td>
                <td>{{ todo.created|date("Y/m/d H:i:s") }}</td>
                <td>
                    {% if todo.status == 1 %}
                        <a class="btn btn-danger" href="/done?id={{ todo.id }}">{{ _ro.text.done }}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% else %}
    <div class="panel-body">
        <p>{{ _ro.text.no_message }}</p>
    </div>
{% endif %}
